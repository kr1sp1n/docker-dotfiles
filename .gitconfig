	email = krispin@posteo.de

[core]
  editor = vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
	pager = more

[color]
	ui = auto

[color "branch"]
	current = yellow
	local = green
	remote = cyan

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
	whitespace = red reverse

[color "status"]
	added = green
	changed = yellow
	untracked = red

[gitflow "prefix"]
	feature = feature/
	release = release/
	hotfix = hotfix/
	support = suppor/
	versiontag = v
