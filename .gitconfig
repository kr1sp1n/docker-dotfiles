[user]
	name = Krispin Schulz
	email = krispin@posteo.de

[core]
  editor = nvim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
	pager = less -R

[color]
	ui = auto

[push]
	default = current

[branch]
	autosetuprebase = always

[interactive]
	singlekey = true

[rebase]
	autosquash = true

[color "branch"]
	current = yellow
	local = green
	remote = cyan

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
	whitespace = red reverse

[color "status"]
	added = green
	changed = yellow
	untracked = red

[gitflow "prefix"]
	feature = feature/
	release = release/
	hotfix = hotfix/
	support = support/
	versiontag = v
